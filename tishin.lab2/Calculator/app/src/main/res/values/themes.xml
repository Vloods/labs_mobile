<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonStyle.Gray" parent="MyButtonStyle">
        <item name="android:background">@color/gray</item>
        <item name="android:onClick">OnClick</item>
    </style>

    <style name="MyButtonStyle.Black" parent="MyButtonStyle">
        <item name="android:background">@color/black</item>
        <item name="android:onClick">OnClickOperation</item>
    </style>

    <style name="MyButtonStyle.Orange" parent="MyButtonStyle">
        <item name="android:background">@color/orange</item>
    </style>
</resources>